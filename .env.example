

# ===========================================
# General Configuration
# ===========================================
# Application URLs
PUBLIC_URL=https://<your_domain>
LOCAL_URL=http://127.0.0.1:8000
# Domain and SSL Configuration (for Nginx)
# Use quotes for multiple domains, separated by spaces (nginx server_name syntax)
DOMAIN_NAME="library.cyberfortress.local library.yourdomain.com"
SSL_CERT_FILE=_.cyberfortress.local.crt
SSL_KEY_FILE=_.cyberfortress.local.key
SSL_CA_FILE=CyberFortress-RootCA.crt


# ===========================================
# Server Configuration
# ===========================================
# Server ports
HTTP_PORT=80
HTTPS_PORT=443
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443


# ===========================================
# Cloudflare Tunnel Configuration
# ===========================================
# CLOUDFLARE_TUNNEL_ID=your_tunnel_id
# TUNNEL_DOMAIN=your_domain.com
# CLOUDFLARE_CONFIG=./cloudflared/config.yml
# CLOUDFLARE_CREDENTIALS_FILE=./cloudflared/your_tunnel_file.json


# ===========================================
# Database Configuration
# ===========================================
# Database (SQLite stored in volume)
# If you want to use database volume or other database in production, uncomment and set your database URL
# DATABASE_URL=<other_database_url>
# DATABASE_URL=sqlite:////app/data/db.sqlite3 # for SQLite volume


# ===========================================
# Mail Server Configuration
# ===========================================
MAIL_SERVER_PWD=your_app_password_here
MAIL_SERVER_USER=your_email@domain.com

# ===========================================
# Django Settings - REQUIRED
# ===========================================
# SECRET_KEY is REQUIRED - Server will not start without it!
# Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
# If you just quick start you can use this :
# SECRET_KEY=5fo8b1jur(&(-@!%ru@ep2u*^&mn_@w_(!(me7r7imbc3yy2mv
# Do not use SECRET_KEY above in production!!!!
SECRET_KEY=your-secret-key-here

# ALLOWED_HOSTS is REQUIRED for production
# In DEBUG mode, localhost/127.0.0.1 are automatically added
ALLOWED_HOSTS=library.cyberfortress.local,127.0.0.1,localhost

# ===========================================
# Development Settings (default)
# ===========================================
DEBUG=True
SECURE_SSL_REDIRECT=False

# ===========================================
# Production Settings (uncomment for production)
# ===========================================
# DEBUG=False
# SECURE_SSL_REDIRECT=True

# ===========================================
# Bank Account Configuration
# ===========================================
BANK_ACCOUNT_NAME=
BANK_ACCOUNT_NO=
BANK_ID=
BANK_TEMPLATE=